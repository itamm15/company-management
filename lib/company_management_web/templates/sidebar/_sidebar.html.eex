<div class="container-fluid" style="background-color: #508bfc; height: 50px;  color: white; font-size: 18px;">
  <div class="row" style="height: 50px;">
    <div class="col-1 d-flex justify-content-center align-items-center">
      <%=
        link "Home", to: Routes.page_path(@conn, :index), style: "color: white"
      %>
    </div>
    <div class="col-2 d-flex justify-content-center align-items-center">
      <%=
        link "Your company", to: Routes.company_path(@conn, :index), style: "color: white"
      %>
    </div>
    <%= if is_admin?(@conn.assigns.current_user) do %>
      <div class="col-1 d-flex justify-content-center align-items-center">
        <%=
          link "Tasks list", to: Routes.admin_assignment_path(@conn, :index), style: "color: white"
        %>
      </div>
      <div class="col-2 d-flex justify-content-center align-items-center">
        <%=
          link "Create task", to: Routes.admin_assignment_path(@conn, :new), style: "color: white"
        %>
      </div>
      <div class="col-1 d-flex justify-content-center align-items-center">
        <%=
          link "Users", to: Routes.admin_user_path(@conn, :index), style: "color: white"
        %>
      </div>
    <%else%>
      <div class="col-3 d-flex justify-content-center align-items-center">
        <%=
          link "Tasks list", to: Routes.assignment_path(@conn, :index), style: "color: white"
        %>
      </div>
    <%end%>
    <div class="col-2 d-flex justify-content-center align-items-center">
      <!--NEXT PANEL IN FUTURE-->
    </div>
    <div class="col-2 d-flex justify-content-center align-items-center">
      <%= if Pow.Plug.current_user(@conn) do %>
        <%= link to: Routes.user_path(@conn, :index) do %>
          <i class="fa fa-user-circle" style="font-size: 30px; color: white"></i>
        <%end%>
      <%end%>
    </div>
    <div class="col-1 d-flex align-items-center">
      <%=
        link "Sign out", to: Routes.pow_session_path(@conn, :delete),  method: :delete,
        style: "color: white"
      %>
    </div>
  </div>
</div>
